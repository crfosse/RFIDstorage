<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addItemBtn"
        android:layout_width="155dp"
        android:layout_height="0dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="556dp"
        android:text="Add new item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridView"
        android:layout_width="344dp"
        android:layout_height="548dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageBtnSlot1"
            android:layout_width="170dp"
            android:layout_height="240dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/ic_launcher_background" />

        <ImageButton
            android:id="@+id/imageBtnSlot2"
            android:layout_width="170dp"
            android:layout_height="240dp"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/ic_launcher_background" />

        <ImageButton
            android:id="@+id/imageBtnSlot3"
            android:layout_width="170dp"
            android:layout_height="240dp"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@drawable/ic_launcher_background" />

        <ImageButton
            android:id="@+id/imageBtnSlot4"
            android:layout_width="170dp"
            android:layout_height="240dp"
            app:layout_column="1"
            app:layout_row="3"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/textViewSlot1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Slot 1"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textViewSlot2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Slot 2"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textViewSlot3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Slot 3"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textViewSlot4"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Slot 4"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            app:layout_column="1"
            app:layout_row="2" />

    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>